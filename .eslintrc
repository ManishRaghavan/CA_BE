{
    "root": true,
    "parserOptions": {
         "ecmaVersion": 12,
         "sourceType": "module"
    },
    "extends": ["eslint:recommended", "prettier"],
    "env": { 
         "es2021": true,
         "node": true
    },
    "rules": {
         "no-console": "error"
    },
    "overrides": [
        {
          "files": ["*.ts", "*.tsx"],
          "parser": "@typescript-eslint/parser",
          "plugins": ["@typescript-eslint"],
          "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"]
        }
      ]
}